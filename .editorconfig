# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_size = 2

[*.py]
charset = utf-8
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
