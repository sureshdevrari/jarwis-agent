<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  Jarwis Agent - macOS Entitlements

  Required for notarization and Hardened Runtime.
  
  NOTE: Dangerous entitlements (disable-library-validation, allow-unsigned-executable-memory,
  debugger) have been removed to ensure smoother notarization.
  These are only needed for Frida integration which should use a separate entitlements file.
-->
<plist version="1.0">
<dict>
    <!-- Allow network connections (client) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow network connections (server - for local MITM proxy) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow JIT compilation (for dynamic scripting if needed) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow reading keychain for SSL certificates -->
    <key>com.apple.security.keychain-access-groups</key>
    <array>
        <string>$(AppIdentifierPrefix)com.jarwis.agent</string>
    </array>

    <!-- File access - downloads folder -->
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>

    <!-- File access - user selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>